.navbar
  %a{:href=>"/"}首页
  >
  %a{:href=>"/nets/#{@net.id}"}= @net.name
  >
  %a{:href=>"/nets/#{@net.id}/points/#{@point.id}"}= @point.name
.page-point-new
  %form{:action => "/nets/#{@net.id}/points/#{@point.id}", :method => "post"}
    .field
      %input{:type => "text", :name => "name", :placeholder => "名称", :value => @point.name}
    .field
      %textarea{:name => "desc", :placeholder => "描述"}= @point.desc
    .field
      %label.checkboxs 前置
      %input{:type => "hidden", :name => "parent_ids[]", :value => ""}
      - points = @net.points - [@point]
      - points.each do |point|
        - checked = @point.parents.include?(point)
        %label.checkbox
          %input{:type => "checkbox", :name => "parent_ids[]", :value => point.id, :checked => checked}
          = point.name
    .field
      %input{:type => "submit", :value => "修改", :class => "button"}
      %a{:href=>"/nets/#{@net.id}/points/#{@point.id}"}取消