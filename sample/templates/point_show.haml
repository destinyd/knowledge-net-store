.navbar
  %a{:href=>"/"}首页
  >
  %a{:href=>"/nets/#{@net.id}"}= @net.name
.page-point-show
  .action
    %a.edit{:href => "/nets/#{@net.id}/points/#{@point.id}/edit"} 编辑
    %a.delete{:href => "javascript:;",:"data-pointid" => @point.id, :"data-netid" => @net.id}删除
  .info
    .name= @point.name
    .desc= @point.desc

  .parents
    前置
    - @point.parents.each do |parent|
      .point= parent.name

  .children
    后置
    - @point.children.each do |child|
      .point= child.name